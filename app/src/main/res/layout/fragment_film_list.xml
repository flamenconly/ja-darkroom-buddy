<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v7.widget.RecyclerView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/film_list"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        app:layoutManager="LinearLayoutManager"
        tools:context="com.thomasringhofer.jadarkroombuddy.FilmFragment"
        tools:listitem="@layout/film_list_item" >

    </android.support.v7.widget.RecyclerView>

    <android.support.design.widget.FloatingActionButton
    android:id="@+id/floatingActionButtonNewFilm"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:src="@drawable/ic_add_circle_1"
    android:layout_gravity="bottom|center"
    android:layout_marginBottom="@dimen/activity_horizontal_margin"
    android:backgroundTint="@color/cardview_dark_background"
    android:foregroundTint="@color/cardview_dark_background"
        app:borderWidth="0dp"
        />
</android.support.design.widget.CoordinatorLayout>